<div class="container-fluid">
  <div class="container">

    <div class="col-sm-7 text-center ">
      <div class="row well">
        <h3>Cocktail:</h3>
        <h4><%= @cocktail.name %></h4>
      </div>
      <div class="row well stuff">
        <%= link_to "Create new dose", new_cocktail_dose_path(@cocktail) %>
        <%= link_to "All Cocktails", cocktails_path %>
        <%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    </div>

    <div class="col-sm-5 text-center">
      <%= cl_image_tag @cocktail.photo, crop: :fill, class: 'img-responsive img-thumbnail' %>
    </div>

    <div class="col-sm-7 text-center stuff well">
      <% @cocktail.doses.each do |dose| %>
      <div class="stuff-items">
        <h5>Doses:</h5>
        <h6><%= dose.description %></h6>
        <h6><%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} %></h6>
      </div>
      <div class="stuff-items">
        <h5>Ingredients:</h5>
        <h6><%= dose.ingredient.name %></h6>
      </div>
    <% end %>
    </div>

    </div>
  </div>

